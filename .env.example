# Enerwise Grid AI Agent - Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Model Configuration
USE_GPU=False
MODEL_CACHE_DIR=./model_cache
ENSEMBLE_WEIGHTS={"nbeats": 0.35, "tft": 0.30, "patchtst": 0.35}

# External API Keys
WEATHER_API_KEY=your_weather_api_key_here
GRID_DATA_API_URL=https://api.grid-data.example.com
GRID_API_KEY=your_grid_api_key_here

# Performance Settings
MAX_FORECAST_HORIZON=168
CACHE_TTL=300

# Security
API_KEY=your_secret_api_key_here
CORS_ORIGINS=["https://enerwise.com", "https://app.enerwise.com"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=enerwise_grid_ai.log
